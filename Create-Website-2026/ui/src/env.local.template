# Template for .env.local
# Copy this file to .env.local and update with your values

# Google Sheets Integration
# Replace YOUR_SCRIPT_ID with your actual Google Apps Script deployment ID
REACT_APP_GOOGLE_WEBAPP_URL=https://script.google.com/macros/s/YOUR_SCRIPT_ID/exec

# Optional: Development and Debug Settings
NODE_ENV=development
REACT_APP_DEBUG=true

# Optional: API Configuration
REACT_APP_API_TIMEOUT=30000
REACT_APP_RETRY_ATTEMPTS=2
REACT_APP_RETRY_DELAY=1000

# Optional: Feature Flags  
REACT_APP_ENABLE_GOOGLE_SHEETS=true

# Instructions:
# 1. Copy this file to .env.local (cp env.local.template .env.local)
# 2. Replace YOUR_SCRIPT_ID with your actual Google Apps Script ID
# 3. Restart your development server (npm start or yarn start)
# 4. The app will automatically use these environment variables